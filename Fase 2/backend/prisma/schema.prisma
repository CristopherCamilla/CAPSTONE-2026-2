generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Articulo {
  id             Int      @id @default(autoincrement())
  empresa       String
  codigo        String
  color         String
  codigo_color  String
  TEMPO         String
  GENERO        String
  CATEGORIA     String
  SUB_CATEGORIA String
  imagen        String?  // Puede ser null
  fecha_creacion DateTime @default(now())

  @@map("articulos")  // Mapeo explícito si el nombre de la tabla es diferente
}

model Categoria {
  id           Int      @id @default(autoincrement())
  cod_categoria String
  categoria     String
  factor        Float?

  @@map("categoria")  // Mapeo explícito si el nombre de la tabla es diferente
}